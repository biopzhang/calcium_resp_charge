	printf("%6d%11s%7d%7s%7s%7d%11s%11s\n",$1,$2,$3,$4,$5,$6,$19,$8)
	}'> b.itp

sed 1,2262p -n b.itp > cam 	    # 2262
sed 2263,2266p -n b.itp > ca	# 4

rm -f a a.itp b.itp 

